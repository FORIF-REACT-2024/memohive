generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  username    String?
  boards      String[]
}

model Board {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String?
  isPublic    Boolean
  summary     String?
  memos       String[]
}

model Memo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  document    String?
}

